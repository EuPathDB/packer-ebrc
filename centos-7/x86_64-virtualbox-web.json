{

  "variables":
    {
      "template_name": "centos-7-64",
      "provisioner": "virtualbox",
      "ssh_username": "root",
      "ssh_password": "ebrc",
      "localstore": "builds",
      "memory_size": "1024",
      "cpu_count": "2",
      "appdb_disk_size": "512000",
      "userdb_disk_size": "51200",
      "data_disk_size": "256000"
    },

  "builders": [
    {
      "output_directory": "{{user `localstore`}}/{{user `template_name`}}-{{user `provisioner`}}-web",
      "vm_name": "{{user `template_name`}}-{{user `provisioner`}}-web",
      "type": "virtualbox-ovf",
      "source_path": "{{user `localstore`}}/{{user `template_name`}}-{{user `provisioner`}}-puppet/{{user `template_name`}}-{{user `provisioner`}}-puppet.ovf",
      "ssh_pty" : "true",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "/sbin/halt -h -p",
      "vboxmanage": [                                                                                                       
        ["sharedfolder", "add", "{{.Name}}", "--name", "scratch", "--hostpath", "{{ pwd }}/scratch", "--automount"],
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `memory_size`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "{{user `cpu_count`}}" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ],
        [ "modifyvm", "{{.Name}}", "--ioapic", "on"],

        [ "createhd", "--format", "VMDK", "--filename", "{{user `localstore`}}/{{user `template_name`}}-{{user `provisioner`}}-web/appdb.vmdk", "--variant", "Standard", "--size", "{{user `appdb_disk_size`}}" ],
        [ "storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "1", "--type", "hdd", "--medium", "{{user `localstore`}}/{{user `template_name`}}-{{user `provisioner`}}-web/appdb.vmdk" ],

        [ "createhd", "--format", "VMDK", "--filename", "{{user `localstore`}}/{{user `template_name`}}-{{user `provisioner`}}-web/userdb.vmdk", "--variant", "Standard", "--size", "{{user `userdb_disk_size`}}" ],
        [ "storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "2", "--type", "hdd", "--medium", "{{user `localstore`}}/{{user `template_name`}}-{{user `provisioner`}}-web/userdb.vmdk" ],

        [ "createhd", "--format", "VMDK", "--filename", "{{user `localstore`}}/{{user `template_name`}}-{{user `provisioner`}}-web/data.vmdk", "--variant", "Standard", "--size", "{{user `data_disk_size`}}" ],
        [ "storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "3", "--type", "hdd", "--medium", "{{user `localstore`}}/{{user `template_name`}}-{{user `provisioner`}}-web/data.vmdk" ]
      ]
    }
  ],

  "provisioners": [
    {
      "type": "shell-local",
      "command": "bin/export_ebrc_puppet"
    },

    {
      "type": "puppet-masterless",
      "execute_command": "cd {{.WorkingDir}} && {{.FacterVars}} PATH=$PATH:/opt/puppetlabs/bin puppet apply --verbose  --detailed-exitcodes --modulepath='{{.ModulePath}}' {{.ManifestFile}}",
      "module_paths": ["puppet/modules"],
      "manifest_file": "puppet/manifests/vagrant.pp"
    },

    {
      "type": "shell",
      "inline": ["PATH=$PATH:/opt/puppetlabs/bin puppet apply --environment=savm --codedir=/media/sf_scratch/puppet/code /media/sf_scratch/puppet/code/environments/savm/manifests"]
    },

    {
      "type": "shell",
      "execute_command": "{{.Vars}} sh '{{.Path}}'",
      "scripts": [
        "scripts/prepare_webdev_disks.sh"
      ]
    },

    {
      "type": "shell",
      "execute_command": "{{.Vars}} sh '{{.Path}}' {{user `required_modules`}}",
      "scripts": [
        "scripts/yumupdate.sh",
        "scripts/reinstall-vbox-guestaddtions.sh",
        "scripts/remove_puppet.sh",
        "scripts/install_sshuttle.sh",
        "scripts/cleanup.sh",
        "scripts/write_packer_build_state",
        "scripts/zerodisk.sh"
      ]
    },

     {
      "type": "file",
      "source": "/root/packer_build_state",
      "destination": "builds/build_state",
      "direction": "download"
    }

  ],

  "post-processors": [
    [{
      "type": "vagrant",
      "output": "builds/vagrant/{{.Provider}}/{{user `template_name`}}-{{.Provider}}-web.box",
      "keep_input_artifact": false,
      "include": [
        "builds/build_state"
      ]
    }]
  ]

}