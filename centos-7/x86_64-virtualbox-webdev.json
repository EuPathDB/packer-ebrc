{

  "variables":
    {
      "template_name": "centos-7-64",
      "provider": "virtualbox",
      "vm_name": "centos-7-webdev",
      "short_vm_name": "webdev",
      "ssh_username": "root",
      "ssh_password": "ebrc",
      "localstore": "builds",
      "memory_size": "1024",
      "cpu_count": "2",
      "appdb_disk_size": "512000",
      "userdb_disk_size": "51200",
      "data_disk_size": "256000",
      "webdev_postprocessor_dryrun": "0"
    },

  "builders": [
    {
      "output_directory": "{{user `localstore`}}/{{user `vm_name`}}-{{user `provider`}}",
      "vm_name": "{{user `vm_name`}}",
      "type": "virtualbox-ovf",
      "source_path": "{{user `localstore`}}/{{user `template_name`}}-puppet-{{user `provider`}}/{{user `template_name`}}-puppet-{{user `provider`}}.ovf",
      "headless": "true",
      "ssh_pty" : "true",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "/sbin/halt -h -p",
      "vboxmanage": [                                                                                                       
        ["sharedfolder", "add", "{{.Name}}", "--name", "scratch", "--hostpath", "{{ pwd }}/scratch", "--automount"],
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `memory_size`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "{{user `cpu_count`}}" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ],
        [ "modifyvm", "{{.Name}}", "--ioapic", "on"],

        [ "createhd", "--format", "VMDK", "--filename", "{{user `localstore`}}/{{user `vm_name`}}-{{user `provider`}}/appdb.vmdk", "--variant", "Standard", "--size", "{{user `appdb_disk_size`}}" ],
        [ "storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "1", "--type", "hdd", "--medium", "{{user `localstore`}}/{{user `vm_name`}}-{{user `provider`}}/appdb.vmdk" ],

        [ "createhd", "--format", "VMDK", "--filename", "{{user `localstore`}}/{{user `vm_name`}}-{{user `provider`}}/userdb.vmdk", "--variant", "Standard", "--size", "{{user `userdb_disk_size`}}" ],
        [ "storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "2", "--type", "hdd", "--medium", "{{user `localstore`}}/{{user `vm_name`}}-{{user `provider`}}/userdb.vmdk" ],

        [ "createhd", "--format", "VMDK", "--filename", "{{user `localstore`}}/{{user `vm_name`}}-{{user `provider`}}/data.vmdk", "--variant", "Standard", "--size", "{{user `data_disk_size`}}" ],
        [ "storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "3", "--type", "hdd", "--medium", "{{user `localstore`}}/{{user `vm_name`}}-{{user `provider`}}/data.vmdk" ]
      ]
    }
  ],

  "provisioners": [
    {
      "type": "shell-local",
      "command": "bin/export_ebrc_puppet"
    },

    {
      "type": "shell-local",
      "command": "cd puppet && librarian-puppet install --verbose"
    },
    
    {
      "type": "file",
      "source": "puppet/hieradata",
      "destination": "/tmp"
    },{
      "type": "file",
      "source": "puppet/keys",
      "destination": "/tmp"
    },{
      "type": "puppet-masterless",
      "manifest_file": "puppet/manifests/vagrant.pp",
      "puppet_bin_dir": "/opt/puppetlabs/puppet/bin",
      "hiera_config_path": "puppet/hiera.yaml",
      "module_paths": ["puppet/modules"]
    },

    {
      "type": "shell",
      "environment_vars": [
        "puppet_environment=savm",
        "puppet_code_dir=/media/sf_scratch/puppet/code"
      ],
      "execute_command": "{{.Vars}} sh '{{.Path}}'",
      "scripts": [
        "scripts/puppet-apply.sh"
      ]
    },

    {
      "type": "shell",
      "execute_command": "{{.Vars}} sh '{{.Path}}'",
      "scripts": [
        "scripts/prepare_webdev_disks.sh"
      ]
    },

    {
      "type": "shell",
      "execute_command": "{{.Vars}} sh '{{.Path}}' {{user `required_modules`}}",
      "scripts": [
        "scripts/yumupdate.sh",
        "scripts/reinstall-vbox-guestaddtions.sh",
        "scripts/remove_puppet.sh",
        "scripts/cleanup-oracle.sh",
        "scripts/install_sshuttle.sh",
        "scripts/cleanup.sh",
        "scripts/write_packer_build_state",
        "scripts/zerodisk.sh"
      ]
    },

     {
      "type": "file",
      "source": "/root/packer_build_state",
      "destination": "builds/build_state",
      "direction": "download"
    }

  ],

  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "builds/vagrant/{{user `provider`}}/{{user `vm_name`}}.box",
        "keep_input_artifact": false,
        "include": [
          "builds/build_state"
        ]
      },
      {
        "type": "shell-local",
        "environment_vars": [
          "BOX_POSTPROCESSOR_DRYRUN={{user `box_postprocessor_dryrun`}}",
          "PROVIDER={{user `provider`}}",
          "VM_NAME={{user `vm_name`}}",
          "SHORT_VM_NAME={{user `short_vm_name`}}",
          "BOX_NAME={{user `vm_name`}}.box",
          "BOX_JSON=webdev.json",
          "LOCAL_BOX=builds/vagrant/{{user `provider`}}/{{user `vm_name`}}.box"
        ],
        "script": "bin/vagrant_box_postprocessor.sh"
      }
    ]
  ]

}