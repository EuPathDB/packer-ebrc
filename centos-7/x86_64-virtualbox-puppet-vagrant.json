{
  "variables": {
    "template_name": "centos-7-64",
    "provider": "virtualbox",
    "description": "CentOS 7 with Puppet 4",
    "vm_name": "centos-7-64-puppet",
    "ssh_username": "root",
    "ssh_password": "ebrc",
    "localstore": "builds"
  },
  "builders": [
    {
      "output_directory": "{{user `localstore`}}/{{user `template_name`}}-puppet-vagrant-{{user `provider`}}",
      "vm_name": "{{user `vm_name`}}",
      "type": "virtualbox-ovf",
      "headless": "true",
      "source_path": "{{user `localstore`}}/{{user `vm_name`}}-{{user `provider`}}/{{user `vm_name`}}-{{user `provider`}}.ovf",
      "ssh_pty": "true",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "/sbin/halt -h -p"
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "command": "cd puppet && librarian-puppet install --verbose"
    },

    {
      "type": "file",
      "source": "puppet/hieradata",
      "destination": "/tmp"
    },{
      "type": "file",
      "source": "puppet/keys",
      "destination": "/tmp"
    },{
      "type": "puppet-masterless",
      "manifest_file": "puppet/manifests/vagrant.pp",
      "puppet_bin_dir": "/opt/puppetlabs/puppet/bin",
      "hiera_config_path": "puppet/hiera.yaml",
      "module_paths": ["puppet/modules"]
    },

    {
      "type": "shell",
      "execute_command": "{{.Vars}} sh '{{.Path}}' {{user `required_modules`}}",
      "scripts": [
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "builds/vagrant/{{user `provider`}}/{{user `vm_name`}}.box",
        "keep_input_artifact": false
      },
      {
        "type": "shell-local",
        "environment_vars": [
          "BOX_POSTPROCESSOR_DRYRUN={{user `box_postprocessor_dryrun`}}",
          "PROVIDER={{user `provider`}}",
          "VM_NAME={{user `vm_name`}}",
          "BOX_NAME={{user `vm_name`}}.box",
          "BOX_JSON={{user `vm_name`}}.json",
          "LOCAL_BOX=builds/vagrant/{{user `provider`}}/{{user `vm_name`}}.box"
        ],
        "script": "bin/vagrant_box_postprocessor.sh"
      }
    ]
  ]
}
