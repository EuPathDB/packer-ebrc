{
  "variables": {
    "template_name": "centos-7-64",
    "description": "CentOS 7 with Puppet 4",
    "provisioner": "virtualbox",
    "ssh_username": "root",
    "ssh_password": "ebrc",
    "localstore": "builds"
  },
  "builders": [
    {
      "output_directory": "{{user `localstore`}}/{{user `template_name`}}-{{user `provisioner`}}-puppet-vagrant",
      "vm_name": "{{user `template_name`}}-{{user `provisioner`}}-puppet",
      "type": "virtualbox-ovf",
      "headless": "true",
      "source_path": "{{user `localstore`}}/{{user `template_name`}}-{{user `provisioner`}}-puppet/{{user `template_name`}}-{{user `provisioner`}}-puppet.ovf",
      "ssh_pty": "true",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "/sbin/halt -h -p"
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "command": "cd puppet && librarian-puppet install --verbose"
    },

    {
      "type": "file",
      "source": "puppet/hieradata",
      "destination": "/tmp"
    },{
      "type": "file",
      "source": "puppet/keys",
      "destination": "/tmp"
    },{
      "type": "puppet-masterless",
      "manifest_file": "puppet/manifests/vagrant.pp",
      "puppet_bin_dir": "/opt/puppetlabs/puppet/bin",
      "hiera_config_path": "puppet/hiera.yaml",
      "module_paths": ["puppet/modules"]
    },

    {
      "type": "shell",
      "execute_command": "{{.Vars}} sh '{{.Path}}' {{user `required_modules`}}",
      "scripts": [
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "builds/vagrant/{{.Provider}}/{{user `template_name`}}-{{.Provider}}-puppet.box",
        "keep_input_artifact": false
      }
    ]
  ]
}
