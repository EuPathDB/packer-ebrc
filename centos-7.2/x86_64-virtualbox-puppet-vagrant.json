{

  "variables":
    {
      "version": "1.0.0",
      "template_name": "centos-7.2-x86_64",
      "description": "CentOS 7 with Puppet 4",
      "provisioner": "virtualbox",
      "ssh_username": "root",
      "ssh_password": "ebrc",
      "localstore": "builds"
    },

  "builders": [
    {
      "output_directory": "{{user `localstore`}}/{{user `template_name`}}-{{user `provisioner`}}-puppet-vagrant",
      "vm_name": "{{user `template_name`}}-{{user `provisioner`}}-puppet",
      "type": "virtualbox-ovf",
      "source_path": "{{user `localstore`}}/{{user `template_name`}}-{{user `provisioner`}}-puppet/{{user `template_name`}}-{{user `provisioner`}}-puppet.ovf",
      "ssh_pty" : "true",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "/sbin/halt -h -p"
    }
  ],

  "provisioners": [

    {
      "type": "puppet-masterless",
      "execute_command": "cd {{.WorkingDir}} && {{.FacterVars}} PATH=$PATH:/opt/puppetlabs/bin puppet apply --verbose  --detailed-exitcodes --modulepath='{{.ModulePath}}' {{.ManifestFile}}",
      "module_paths": ["puppet/modules"],
      "manifest_file": "puppet/manifests/vagrant.pp"
    },

    {
      "type": "shell",
      "execute_command": "{{.Vars}} sh '{{.Path}}' {{user `required_modules`}}",
      "scripts": [
        "scripts/cleanup.sh",
        "scripts/zero.sh"
      ]
    }
  ],

  "post-processors": [
    [{
      "type": "vagrant",
      "output": "builds/vagrant/{{.Provider}}/{{user `template_name`}}-{{.Provider}}-puppet.box",
      "keep_input_artifact": false
    },
    {
      "type": "atlas",
      "artifact": "mheiges/{{user `template_name`}}",
      "artifact_type": "vagrant.box",
      "metadata": {
        "description": "{{user `description`}}",
        "provider": "virtualbox",
        "created_at": "{{timestamp}}",
        "version": "0.0.1"
      }
    }]
  ]

}